#!/bin/bash
#SBATCH -J  T0951
#SBATCH -o T0951-%j.out
#SBATCH --partition Lewis,hpc5,hpc4
#SBATCH --nodes=1
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=10
#SBATCH --mem-per-cpu=2G
#SBATCH --time 2-00:00

mkdir -p SOFTWARE_PATH/test_out/T0951_multicom/
cd SOFTWARE_PATH/test_out/T0951_multicom/

source SOFTWARE_PATH/multicom/tools/python_virtualenv/bin/activate
export LD_LIBRARY_PATH=SOFTWARE_PATH/multicom/tools/boost_1_55_0/lib/:SOFTWARE_PATH/multicom/tools/OpenBLAS:$LD_LIBRARY_PATH

if [[ ! -f "SOFTWARE_PATH/test_out/T0951_multicom/mcomb/casp1.pdb" ]];then 
	perl SOFTWARE_PATH/scripts/CASP13_human_ts_pipeline.pl T0951 SOFTWARE_PATH/examples/T0951.fasta SOFTWARE_PATH/test_out/T0951_multicom/ alignment null SOFTWARE_PATH/examples/T0951

fi


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/test_out/T0951_multicom.log>\n\n"

sh SOFTWARE_PATH/multicom/src/visualize_multicom_cluster/P1_organize_prediction.sh SOFTWARE_PATH/test_out/T0951_multicom/  T0951  SOFTWARE_PATH/test_out/T0951_multicom/multicom_results


if [[ ! -f "SOFTWARE_PATH/test_out/T0951_multicom/mcomb/casp1.pdb" ]];then 
	printf "!!!!! Failed to run multicom, check the installation <SOFTWARE_PATH/src/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/test_out/T0951_multicom/mcomb/casp1.pdb\n\n"
fi


perl SOFTWARE_PATH/multicom/installation/scripts/validate_integrated_predictions_final.pl  T0951  SOFTWARE_PATH/test_out/T0951_multicom/full_length/meta SOFTWARE_PATH/multicom/installation/benchmark/TBM/T0951  SOFTWARE_PATH/multicom/multicom/installation/benchmark/TBM/T0951.pdb  meta 2>&1 | tee -a SOFTWARE_PATH/test_out/T0951_multicom.log


printf "\nCheck final predictions.."


perl SOFTWARE_PATH/multicom/installation/scripts/validate_integrated_predictions_final.pl  T0951  SOFTWARE_PATH/test_out/T0951_multicom/mcomb SOFTWARE_PATH/multicom/installation/benchmark/TBM/T0951/mcomb SOFTWARE_PATH/multicom/installation/benchmark/TBM/T0951.pdb  casp 2>&1 | tee -a SOFTWARE_PATH/test_out/T0951_multicom.log
